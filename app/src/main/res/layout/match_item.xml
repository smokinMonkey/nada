<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conlay_match_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondaryText">

    <ImageView
        android:id="@+id/iv_match_item_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/grid_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_person_outline"/>

    <LinearLayout
        android:id="@+id/linlay_match_item_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_match_item_image">

        <TextView
            android:id="@+id/tv_match_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="@dimen/grid_1x"
            android:layout_marginLeft="@dimen/grid_3x"
            android:layout_marginRight="@dimen/grid_3x"
            tools:text="Name" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>